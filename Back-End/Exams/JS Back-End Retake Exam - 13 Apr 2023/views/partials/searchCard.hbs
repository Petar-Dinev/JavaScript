<div class="search-result">
    <div class="search-list">
        <div class="game">
            <div class="game-img">
                <img src="{{image}}">
            </div>
            <div class="game-info">
                <h1>{{name}}</h1>
                <p><span>Platform: </span>{{platform}}</p>
                <p><span>Ganre: </span>{{genre}}</p>
                <p><span>Price: </span>${{price}}</p>
            </div>

            <a href="/games/{{_id}}" class="btn-details">Details</a>
        </div>
    </div>
</div>