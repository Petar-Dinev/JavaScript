<section id="catalog-section">
    {{#with auction}}
    <h1 class="item">
        {{title}}
        {{#if isOwner}}
        <div class="f-right">
            <a class="action pad-small f-left" href="/auctions/{{_id}}/edit">Edit</a>
            <a class="action pad-small f-left" href="/auctions/{{_id}}/delete">Delete</a>
        </div>
        {{/if}}
    </h1>
    <div class="item padded">

        <div class="layout right large">

            <div class="col">
                <img src="{{imageUrl}}" class="img-large">
            </div>

            <div class="content pad-med">

                <p>In category: <strong>{{category}}</strong></p>
                <p>{{description}}</p>

                <div class="align-center">
                    <div>
                        Current price: $<strong>{{price}}</strong>
                    </div>
                    {{#if hasUser}}
                    {{#if isOwner}}
                    <div>
                        {{#if bidder}}
                        <!-- If there is a bidder -->
                        Bid by <strong>{{bidder.firstName}} {{bidder.lastName}}</strong>

                        <!-- # Bonus: If there is a bidder -->

                        <a class="action pad-med cta" href="/auctions/{{_id}}/close">Close Auction</a>

                        <!-- # End of Bonus -->
                        {{else}}
                        <!-- If there are no bids -->
                        No bids
                        {{/if}}
                    </div>
                    {{else}}
                    {{#if isBidder}}
                    <!-- If current user is the bidder -->
                    <div>
                        You are currently the <strong>highest bidder</strong> for this auction
                    </div>
                    {{else}}
                    <!-- If current user can place a bid -->
                    <form class="vertical" method="post" action="/auctions/{{_id}}/bid">
                        <label><span>Bid amount</span><input type="number" name="bid"></label>
                        <input class="action" type="submit" value="Place bid">
                    </form>
                    {{/if}}
                    {{/if}}
                    {{/if}}
                </div>

            </div>
        </div>

        <footer>Listed by {{authorFullName}}</footer>
    </div>
    {{/with}}
</section>