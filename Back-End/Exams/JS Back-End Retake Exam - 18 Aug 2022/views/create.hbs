<section class="create-form-container">

    <form action="/books/create" method="post">
        <h3>Create Book Review</h3>
        <label>Title</label>
        <input type="text" name="title" class="box" id="title" value="{{book.title}}">
        <label for="author">Author</label>
        <input type="text" name="author" class="box" id="author" value="{{book.author}}">
        <label for="genre">Genre</label>
        <input type="text" name="genre" class="box" id="genre" value="{{book.genre}}">
        <label for="stars">Stars</label>
        <input type="number" name="stars" class="box" id="stars" value="{{book.stars}}">
        <label for="image">Image</label>
        <input type="text" name="image" class="box" id="image" value="{{book.image}}">
        <label for="bookReview">Review</label>
        <textarea class="box" name="bookReview">{{book.bookReview}}</textarea>
        <input type="submit" value="Create" class="btn">
    </form>
</section>