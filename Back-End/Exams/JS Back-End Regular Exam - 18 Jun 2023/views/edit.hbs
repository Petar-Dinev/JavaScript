<main class="edit">
    <!-- Edit Page (Only for logged-in users) -->
    <section id="create">
        <div class="form">
            <h2>Edit item</h2>
            <form class="create-form" method="post" action="/animals/{{data._id}}/edit">
                <input type="text" name="name" id="name" placeholder="Name" value="{{data.name}}" />
                <input type="text" name="years" id="years" placeholder="Years" value="{{data.years}}" />
                <input type="text" name="kind" id="kind" placeholder="Kind" value="{{data.kind}}" />
                <input type="text" name="imageUrl" id="animal-img" placeholder="Image url" value="{{data.imageUrl}}" />
                <input type="text" name="need" id="needs-of" placeholder="Needs of" value="{{data.need}}" />
                <input type="text" name="location" id="location" placeholder="Location" value="{{data.location}}" />
                <textarea id="description" placeholder="Description..."
                    name="description">{{data.description}}</textarea>

                <button type="submit">Edit</button>
            </form>
        </div>
    </section>
</main>